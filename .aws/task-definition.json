{
    "executionRoleArn": "arn:aws:iam::SED_AWS_ACCOUNT_ID:role/SED_APP_NAME-TaskExecution",
    "taskRoleArn": "arn:aws:iam::SED_AWS_ACCOUNT_ID:role/SED_APP_NAME-TaskExecution",
    "family": "SED_APP_NAME",
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "volumes": [
        {
            "fsxWindowsFileServerVolumeConfiguration": null,
            "efsVolumeConfiguration": null,
            "name": "app-storage",
            "host": {
                "sourcePath": null
            },
            "dockerVolumeConfiguration": null
        }
    ],
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "SED_REGION.dkr.ecr.SED_REGION.amazonaws.com/nginx",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "app-storage",
                    "containerPath": "/app"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-region": "SED_REGION",
                    "awslogs-group": "/SED_APP_NAME/ecs",
                    "awslogs-stream-prefix": "SED_APP_NAME-nginx"
                }
            }
        },
        {
            "name": "app",
            "image": "SED_AWS_ACCOUNT_ID.dkr.ecr.SED_REGION.amazonaws.com/app",
            "mountPoints": [
                {
                    "sourceVolume": "app-storage",
                    "containerPath": "/app"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-region": "SED_REGION",
                    "awslogs-group": "/SED_APP_NAME/ecs",
                    "awslogs-stream-prefix": "SED_APP_NAME-app"
                }
            },
            "environment": [
                {
                    "name": "APP_NAME",
                    "value": "SED_APP_NAME"
                },
                {
                    "name": "APP_KEY",
                    "value": "hogefugapiyo"
                },
                {
                    "name": "APP_ENV",
                    "value": "production"
                },
                {
                    "name": "LOG_CHANNEL",
                    "value": "stderr"
                }
            ],
            "secrets": [
                {
                    "name": "DB_HOST",
                    "valueFrom": "DB_HOST"
                },
                {
                    "name": "DB_USERNAME",
                    "valueFrom": "DB_USERNAME"
                },
                {
                    "name": "DB_PASSWORD",
                    "valueFrom": "DB_PASSWORD"
                }
            ]
        }
    ]
}